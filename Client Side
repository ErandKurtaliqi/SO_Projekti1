#include <stdio.h>

#include <stdlib.h>

#include <unistd.h>

#include <sys/ipc.h>

#include <string.h>

#include <sys/msg.h>

#include <sys/types.h>



#define MAX_MESSAGE_SIZE 256 // Size of the buffer used for communication



struct message{

long mtype;

char mtext [MAX_MESSAGE_SIZE];

};

int main() {

    

    key_t key;

    int message_queue_id;

    

    struct message msg;

key = ftok(".", 'q');

    if(key == -1){

    perror("ftok");

    exit(1);

    }

    

    message_queue_id = msgget(key, 0666);

    if(message_queue_id == -1){

    perror("msgget");

    exit(1);

    }

    

    
    

    msgrcv(message_queue_id, &msg, MAX_MESSAGE_SIZE, getpid(), 0);

    

    printf("Server response: %s\n", msg.mtext);

    printf("Enter a message ('exit' to quit): ");

    }



    return 0;
}

